@page "/"

<div class="home-page">
    <!-- Hero Section -->
    <section class="hero-section py-5 text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">Gerencie seu Restaurante com Eficiência</h1>
                    <p class="lead mb-4">Controle pedidos, estoque, funcionários e muito mais em um só lugar. A solução completa para seu restaurante.</p>
                    <div class="d-flex gap-3">
                        <a href="/pedidos" class="btn btn-light btn-lg">
                            <i class="bi bi-cart me-2"></i>Ver Pedidos
                        </a>
                        <a href="/cardapio" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-menu-button-wide me-2"></i>Gerenciar Cardápio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Stats -->
    <section class="stats-section py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-cart-check display-4 text-primary mb-3"></i>
                            <h3 class="h2 mb-2">24</h3>
                            <p class="text-muted mb-0">Pedidos Hoje</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-currency-dollar display-4 text-success mb-3"></i>
                            <h3 class="h2 mb-2">R$ 1.250</h3>
                            <p class="text-muted mb-0">Faturamento Hoje</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-clock-history display-4 text-warning mb-3"></i>
                            <h3 class="h2 mb-2">12 min</h3>
                            <p class="text-muted mb-0">Tempo Médio de Entrega</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-star display-4 text-info mb-3"></i>
                            <h3 class="h2 mb-2">4.8</h3>
                            <p class="text-muted mb-0">Avaliação Média</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Orders -->
    <section class="orders-section py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Pedidos Recentes</h2>
                <a href="/pedidos" class="btn btn-outline-primary">Ver Todos</a>
            </div>
            <div class="row g-4">
                @foreach (var order in GetRecentOrders())
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h3 class="h5 card-title mb-0">Pedido #@order.Id</h3>
                                    <span class="badge bg-@order.StatusColor">@order.Status</span>
                                </div>
                                <p class="card-text text-muted">@order.Items</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-clock me-2"></i>
                                        <small class="text-muted">@order.TimeAgo</small>
                                    </div>
                                    <div class="text-end">
                                        <h4 class="h5 mb-0">@order.Total</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Popular Items -->
    <section class="menu-section py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Itens Mais Vendidos</h2>
                <a href="/cardapio" class="btn btn-outline-primary">Ver Cardápio Completo</a>
            </div>
            <div class="row g-4">
                @foreach (var item in GetPopularItems())
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 border-0 shadow-sm">
                            <img src="@item.ImageUrl" 
                                 class="card-img-top" 
                                 alt="@item.Name" 
                                 style="height: 160px; object-fit: cover;">
                            <div class="card-body">
                                <h3 class="h5 card-title">@item.Name</h3>
                                <p class="card-text text-muted">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-graph-up me-2"></i>
                                        <small class="text-muted">@item.Sales vendidos hoje</small>
                                    </div>
                                    <h4 class="h5 mb-0">@item.Price</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

