@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Web
@inject IJSRuntime JS

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-egg-fried me-2"></i>GreatChef
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="bi bi-house-door me-1"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#menu"><i class="bi bi-menu-button-wide me-1"></i>Cardápio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#pedidos"><i class="bi bi-list-check me-1"></i>Pedidos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @Body
    </main>

    <footer class="footer mt-auto py-3 bg-dark text-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-egg-fried me-2"></i>GreatChef</h5>
                    <p class="text-muted">Gerencie seu restaurante de forma moderna e eficiente.</p>
                </div>
                <div class="col-md-4">
                    <h5>Links Úteis</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none">Home</a></li>
                        <li><a href="#menu" class="text-muted text-decoration-none">Cardápio</a></li>
                        <li><a href="#pedidos" class="text-muted text-decoration-none">Pedidos</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contato</h5>
                    <ul class="list-unstyled ">
                        <li ><i class="bi bi-envelope me-2 "></i>contato@greatchef.com</li>
                        <li><i class="bi bi-telephone me-2 "></i>(11) 99999-9999</li>
                    </ul>
                </div>
            </div>
            <hr class="mt-4 mb-3">
            <div class="text-center text-muted">
                <small>&copy; 2024 GreatChef. Todos os direitos reservados.</small>
            </div>
        </div>
    </footer>
</div>

@code {
    private bool _sidebarVisible = true;

    private void ToggleSidebar()
    {
        _sidebarVisible = !_sidebarVisible;
    }

    private async Task DismissError()
    {
        await JS.InvokeVoidAsync("document.querySelector('#blazor-error-ui').classList.add", "d-none");
    }
}
